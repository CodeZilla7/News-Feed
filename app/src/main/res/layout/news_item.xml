<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/card_margin"
        android:elevation="3dp"
        card_view:cardCornerRadius="@dimen/card_radius">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:theme="@style/AppTheme">


            <ImageView
                tools:src="@drawable/placeholder_image"
                android:id="@+id/article_image_view"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:contentDescription="@string/article_image_description"
                android:scaleType="centerCrop"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/scrim"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/scrim_gradient"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintStart_toEndOf="parent" />

            <TextView
                android:id="@+id/title_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                card_view:layout_constraintBottom_toBottomOf="@+id/article_image_view"
                card_view:layout_constraintLeft_toLeftOf="parent"
                card_view:layout_constraintStart_toStartOf="@+id/article_image_view"
                tools:text="Stocks turn higher; bank shares lead early gains." />

            <TextView
                android:id="@+id/description_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                card_view:layout_constraintTop_toBottomOf="@+id/article_image_view"
                tools:text="U.S. stocks shook off an early decline Wednesday and turned higher. Banks rose along with bond yields after the government said consumer prices climbed at a faster than expected rate in January. There were few signs of the worries about inflation that sent st..." />

            <TextView
                android:id="@+id/news_source_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:textColor="@color/secondary_text"
                card_view:layout_constraintBottom_toBottomOf="@id/description_text_view"
                card_view:layout_constraintTop_toBottomOf="@id/description_text_view"
                tools:text="Latimes.com" />

            <TextView
                android:id="@+id/author_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:textColor="@color/secondary_text"
                android:textSize="14sp"
                card_view:layout_constraintBottom_toBottomOf="@id/description_text_view"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintTop_toBottomOf="@id/description_text_view"
                tools:text="Eton Otieno" />

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>